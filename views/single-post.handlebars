<article class="post">
    {{!-- original post --}}
    <div class="title">
        <p>{{post.title}}</p>
    </div>
    <div class="content">
        <p>{{post.content}}</p>
    </div>
    <div class="meta">
        Posted by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>

    {{!-- comment form --}}
    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>

        <div>
            <button type="submit">add comment</button>
        </div>
    </form>
    {{/if}}

    {{!-- comments --}}
    <div class="comments">
        {{#each post.comments}}
        <section class="comment">
            <div class="meta">
                {{user.username}} on {{created_at}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </section>
        {{/each}}
    </div>
</article>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}